@if (Model.rows != null && Model.rows.Any())
{
    foreach (var rows in Model.rows)
    {
        <div class="row">
            @foreach (var col in rows.cols)
            {
                <div class="col-lg-@(col.lg)">
                    @foreach (var widget in col.widgets)
                    {
                        @Html.Partial(widget.viewPath, widget)
                    }
                </div>
            }
        </div>
    }
}