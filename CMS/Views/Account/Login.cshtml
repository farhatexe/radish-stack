<!-- BEGIN BODY -->
<body class="login">
    <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="/">
            @*<img src="@area/content/img/logo.png" alt="" />*@
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form class="login-form" action="/account/login" method="post">
            <h3 class="form-title">Sign In</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                    Enter any username and password.
                </span>
            </div>
            @if (Model.LoginError)
            {
                <div class="alert alert-warning">
                    <button class="close" data-close="alert"></button>
                    <span>
                        @Html.ValidationSummary(true)
                </span>
            </div>
            }
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Username</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Password</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" />
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-success uppercase">Login</button>
                <label class="rememberme check">
                    <input type="checkbox" name="remember" value="1" />Remember
                </label>
                @*<a href="javascript:;" id="forget-password" class="forget-password">Forgot Password?</a>*@
            </div>
            @*<div class="login-options">
                    <h4>Or login with</h4>
                    <ul class="social-icons">
                        <li>
                            <a class="social-icon-color facebook" data-original-title="facebook" href="#"></a>
                        </li>
                        <li>
                            <a class="social-icon-color twitter" data-original-title="Twitter" href="#"></a>
                        </li>
                        <li>
                            <a class="social-icon-color googleplus" data-original-title="Goole Plus" href="#"></a>
                        </li>
                        <li>
                            <a class="social-icon-color linkedin" data-original-title="Linkedin" href="#"></a>
                        </li>
                    </ul>
                </div>*@
            <div class="create-account">
                <p>
                    @*<a href="javascript:;" id="register-btn" class="uppercase">Create an account</a>*@
                </p>
            </div>
        </form>
        <!-- END LOGIN FORM -->


    </div>
    <div class="copyright">
        COPYRIGHT Radish Stack © @DateTime.Now.Year  ALL RIGHTS RESERVED.
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <!-- BEGIN CORE PLUGINS -->
    <!--[if lt IE 9]>
    <script src="/content/plugins/respond.min.js"></script>
    <script src="/content/plugins/excanvas.min.js"></script>
    <![endif]-->
    <script src="@area/content/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="@area/content/plugins/jquery-migrate.min.js" type="text/javascript"></script>
    <script src="@area/content/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="@area/content/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="@area/content/plugins/jquery.cokie.min.js" type="text/javascript"></script>
    <script src="@area/content/plugins/uniform/jquery.uniform.min.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="@area/content/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="@area/content/js/metronic.js" type="text/javascript"></script>
    <script src="@area/content/js/layout.js" type="text/javascript"></script>
    <script src="@area/content/js/demo.js" type="text/javascript"></script>
    <script src="@area/Content/pages/scripts/login.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            Login.init();
            Demo.init();
        });
    </script>
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>