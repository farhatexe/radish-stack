    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="@area/Content/pages/css/login.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- BEGIN THEME STYLES -->
    <link href="@area/content/css/components.css" id="style_components" rel="stylesheet" type="text/css" />
    <link href="@area/content/css/plugins.css" rel="stylesheet" type="text/css" />
    <link href="@area/Content/css/layout.css" rel="stylesheet" type="text/css" />
    <link href="@area/content/css/themes/darkblue.css" rel="stylesheet" type="text/css" id="style_color" />
    <link href="@area/content/css/custom.css" rel="stylesheet" type="text/css" />
    <!-- END THEME STYLES -->
    <link rel="shortcut icon" href="/favicon.ico" />
</head>
