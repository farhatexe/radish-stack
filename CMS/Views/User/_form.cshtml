@model CMS.Models.UserForm
    <div class="form-body">
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Username <span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <div class="input-group" style="text-align: left">
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                            <span class="input-group-btn">
                                <a href="javascript:;" class="btn blue" id="username1_checker" data-loading-text="Loading..." data-original-title="" title="">
                                    Check
                                </a>
                            </span>
                        </div>
                        <div class="help-block" id="usernamecheck">
                        
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Password <span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                        @Html.HiddenFor(x => x.Id)
                        <span class="help-block">
                            Provide your password.
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Confirm Password <span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="rpassword" value="@Model.Password">
                        <span class="help-block">
                            Confirm your password
                        </span>
                    </div>
                </div>
            
                <div class="form-group">
                    <label class="control-label col-md-3">
                        Role <span class="required">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        <div class="radio-list">
                       
                                <label>
                                    <input type="radio" name="Role" value="10" @(Model.Role == 10 ? "checked" : "") data-title="Admin" />
                                    Admin
                                </label>

                                <label>
                                    <input type="radio" name="Role" value="20" @(Model.Role == 20 ? "checked" : "") data-title="Data Entry" />
                                  Data Entry
                                </label>
                                <label>
                                    <input type="radio" name="Role" value="30" @(Model.Role == 30 ? "checked" : "") data-title="Reporter" />
                                    Reporter
                                </label>
                          
                           
                        </div>
                        <div id="form_gender_error">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3">
                        First Name <span class="required" aria-required="true">
                            *
                        </span>
                    </label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        <span class="help-block">
                            Provide your Name
                        </span>
                    </div>
                </div>
               
            </div>
      
    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-3 col-md-9">
              
                <button type="submit" class="btn btn-success button-submit">
                    Save <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>
        </div>
    </div>
