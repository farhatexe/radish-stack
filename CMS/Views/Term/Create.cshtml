@model CMS.Models.TermForm

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-md-12">
        <h3 class="page-title">
            <small></small>
            @AppResources.Instance.Get(Model.PostType.Title) - @AppResources.Instance.Get(Model.Taxonomy.ToString()) - @AppResources.Instance.Get("Create")
        </h3>
       
    </div>
</div>
@Html.AlertMessage()
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i> @AppResources.Instance.Get("Create") 
                </div>
            </div>
            <div class="portlet-body form">
                @using (Html.BeginForm("Create", "Term", FormMethod.Post, new
                {
                    @enctype = "multipart/form-data",
                    @class = "form-horizontal " +
                             "form-bordered " +
                             "form-label-stripped"
                }))
                {
                   @Html.Partial("_form")
                }
            </div>
        </div>
    </div>
</div>
