@model List<Core.Repositories.Widget>

<div class="row">
    <div class="col-md-12">
        <h3 class="page-title">
            <small></small>
            Widgets
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Widgets
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a id="sample_editable_1_new" class="btn btn-success" href="@Url.Action("Create")">
                                    <i class="fa fa-plus"></i>   Create 
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>
                </div>
                @if (Model != null && Model.Any())
                {
                    <table class="table table-bordered table-striped table-condensed flip-content">
                        <thead class="flip-content">
                            <tr>
                                <th>
                                    Title
                                </th>
                                <th>

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <a style="font-size: 16px;" href="@Url.Action("Edit", new { id = item.Id})">
                                        <i class="fa fa-edit"></i> @item.Title
                                    </a>
                                </td>
                                <td></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        <strong>No Data</strong>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
